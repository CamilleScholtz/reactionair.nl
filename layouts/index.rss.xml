{{ $articles := where site.RegularPages "Type" "eq" "artikelen" }}

{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
	<channel>
	<title>Reactionair.nl</title>
	<link>{{ .Permalink }}</link>
	<description>De reactionair kijkt niet vooruit, en niet achteruit, maar naar boven, naar de sterren en de hemel.</description>
	<language>{{ site.LanguageCode }}</language>
	<managingEditor>contact@reactionair.nl</managingEditor>
	<lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>
	{{ range $articles }}
		<item>
			<title>{{ .Params.title }} - {{ .Params.subtitle }}</title>
			<link>{{ .Permalink }}</link>
			<pubDate>{{ .Params.date | time.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
			<author>{{ delimit .Params.auteurs ", " ", "  }}</author>
			<description>{{ truncate 300 .Content | html}}</description>
		</item>
	{{ end }}
	</channel>
</rss>
