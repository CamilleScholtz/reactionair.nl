{{ $articles := where site.RegularPages "Type" "eq" "artikelen" }}
{{ $index    := slice}}

{{ range $articles }}
    {{ $index = $index | append (dict 
		"title" .Params.title
        "subtitle" .Params.subtitle
        "authors" .Params.auteurs
        "content" (.Content | plainify | replaceRE "\n" " ")
        "permalink" .Permalink
    ) }}
{{ end }}

{{ $index | jsonify }}
